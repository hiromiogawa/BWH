<div class="cts">
  <section>
    <div class="bg-carbon">
      <div class="bg-screw">
        <h2 class="heading01 ic ic-circuit"><%= @circuit.name %></h2>
        <div class="col2 col2-3">
          <div class="cell">
            <div class="img-area">
              <% if @circuit.img? %>
                <%= image_tag @circuit.img.url %>
              <% else %>
                <%= image_tag('common/noimage.jpg') %>
              <% end %>
            </div>
          </div>
          <div class="cell">
            <section>
              <h2 class="heading02 ic ic-calendar">attack day</h2>
              <p><%= @event.day %></p>
            </section>
            <section>
              <h2 class="heading02 ic ic-h">driver</h2>
              <p><%= link_to @datalist.user.name, user_path(@datalist.user)  %></p>
            </section>
            <section class="besttime">
              <h2 class="heading02 ic ic-flag">best time</h2>
              <% unless @besttime.blank? %>
                <ul class="list-dot">
                  <li>
                    <%= link_to(@besttime.heat) do %>
                    <p class="time"><%= @besttime.total %></p>
                    <% end %>
                  </li>
                </ul>
              <% else %>
                <p>登録されたデータはありません</p>
              <% end %>
            </section>
            <section>
              <h2 class="heading02 ic ic-h">heat list</h2>
              <ul class="list-dot">
                <% @heats.each do |heat| %>
                <li>
                  <%= link_to (heat) do %>
                    <%= heat.number %>h: <%= heat.laptimes.minimum(:total) %>
                  <% end %>
                </li>
                <% end %>
              </ul>
            </section>
          </div>
        </div>
        <div class="btn-wrap">
          <% if current_user  == @datalist.user %>
            <div class="btn"><%= link_to 'heatを追加する', new_heat_path(circuit_id: @circuit.id, event_id: @event.id) %></div>
          <% end %>
          <div class="btn"><%= link_to '開催日トップへ戻る', event_path(@event, circuit_id: @circuit.id) %></div>
        </div>
      </div>
    </div>
  </section>
</div>
