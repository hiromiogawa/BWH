<% @page_class = 'user' %>
<div class="cts">
  <section class="user_list">
    <div class="profile bg-carbon">
      <div class="bg-screw">
        <div class="inner">
          <h2 class="heading01 ic ic-h">user list</h2>
          <ul class="col3">
            <% @users.each do |user| %>
              <li class="bg-aluminum">
                <%= link_to (user), class:'bg-screw' do %>
                  <div class="img-area">
                    <% if user.img? %>
                      <%= image_tag user.img.url %>
                    <% else %>
                      <%= image_tag('common/noimage.jpg') %>
                    <% end %>
                  </div>
                  <p class="name"><%= user.name %></p>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>
