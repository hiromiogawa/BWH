<div class="cts">
  <section>
    <div class="bg-carbon">
      <div class="bg-screw">
        <h2 class="heading01 ic ic-circuit"><%= @circuit.name %></h2>
        <div class="col2 col2-3">
          <div class="cell">
            <div class="img-area">
              <% if @circuit.img? %>
                <%= image_tag @circuit.img.url %>
              <% else %>
                <%= image_tag('common/noimage.jpg') %>
              <% end %>
            </div>
          </div>
          <div class="cell">
            <section>
              <h2 class="heading02 ic ic-calendar">attack day</h2>
              <p class="day"><%= @event.day %></p>
            </section>

            <section>
              <h2 class="heading02 ic ic-h">join user</h2>
              <ul class="list-dot">
                <% @datalists.each do |datalist| %>
                  <li><%= link_to datalist.user.name, datalist_path(datalist, circuit_id: @circuit.id, event_id: @event.id)  %></li>
                <% end %>
              </ul>
            </section>
            <% if logged_in? %>
              <% if current_user.dataregister?(@event) %>
              <% else %>
                <div class="btn">
                  <%= form_for(current_user.datalists.build) do |f| %>
                    <%= hidden_field_tag :event_id, @event.id %>
                    <%= hidden_field_tag :circuit_id, @circuit.id %>
                    <%= f.submit '参加する', class: '' %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="btn-wrap">
          <div class="btn"><%= link_to 'サーキットトップへ', @circuit %></div>
          <% if logged_in? %>
            <% if current_user.admin?  %>
              <div class="btn btn-red"><%= link_to '削除する', @event, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
